{
  "name": "@platform/npm",
  "version": "0.2.71",
  "description": "Helpers for working with NPM.",
  "main": "./lib/index",
  "types": "./lib/index.d.ts",
  "scripts": {
    "test": "ts test",
    "tdd": "ts test --watch",
    "test:integration": "ts test --suffix INTEGRATION",
    "tddi": "ts test --suffix INTEGRATION --watch",
    "lint": "ts lint",
    "build": "ts build",
    "prepare": "ts prepare",
    "pv": "ts-node -T scripts/prompt-version.ts"
  },
  "dependencies": {
    "@platform/cli.prompt": "0.3.19",
    "@platform/exec": "0.2.58",
    "@platform/fs": "0.5.16",
    "@platform/log": "0.1.24",
    "@platform/types": "0.4.21",
    "@platform/util.value": "0.7.21",
    "@types/semver": "7.2.0",
    "inquirer": "7.1.0",
    "semver": "7.3.2"
  },
  "devDependencies": {
    "@platform/test": "0.1.11",
    "@platform/ts": "3.9.2",
    "@types/dotenv": "8.2.0",
    "@types/inquirer": "6.5.0",
    "dotenv": "8.2.0"
  },
  "files": [
    "lib",
    "!lib/test",
    "!*.TEST.{js, mjs, d.ts}",
    "!*.INTEGRATION.{js, mjs, d.ts}"
  ],
  "license": "MIT"
}
