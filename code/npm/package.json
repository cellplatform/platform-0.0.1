{
  "name": "@platform/npm",
  "version": "0.3.18",
  "description": "Helpers for working with NPM.",
  "main": "./lib/index",
  "types": "./lib/index.d.ts",
  "scripts": {
    "test": "ts test",
    "tdd": "ts test --watch",
    "test:integration": "ts test --suffix INTEGRATION",
    "tddi": "ts test --suffix INTEGRATION --watch",
    "lint": "ts lint",
    "build": "ts build",
    "prepare": "ts prepare",
    "pv": "ts-node -T scripts.ts/prompt-version.ts",
    "tmp": "ts-node -T scripts.ts/save.ts"
  },
  "dependencies": {
    "@platform/cli.prompt": "0.3.30",
    "@platform/exec": "0.2.67",
    "@platform/fs": "0.6.0",
    "@platform/log": "0.1.35",
    "@platform/types": "0.5.8",
    "@platform/util.value": "0.8.5",
    "@types/semver": "7.3.4",
    "inquirer": "7.3.3",
    "semver": "7.3.2"
  },
  "devDependencies": {
    "@platform/test": "0.1.17",
    "@platform/ts": "4.0.6",
    "@types/dotenv": "8.2.0",
    "@types/inquirer": "7.3.1",
    "dotenv": "8.2.0"
  },
  "files": [
    "lib",
    "!lib/test",
    "!*.TEST.{js, mjs, d.ts}",
    "!*.INTEGRATION.{js, mjs, d.ts}"
  ],
  "license": "MIT"
}
