{
  "name": "@platform/npm",
  "version": "0.4.17",
  "description": "Helpers for working with NPM.",
  "main": "./lib/index",
  "types": "./lib/index.d.ts",
  "scripts": {
    "test": "ts test",
    "test:integration": "ts test --suffix INTEGRATION",
    "tddi": "ts test --suffix INTEGRATION --watch",
    "lint": "ts lint",
    "build": "ts build --no-esm",
    "prepare": "ts prepare",
    "pv": "ts-node -T scripts.ts/prompt-version.ts",
    "tmp": "ts-node -T scripts.ts/save.ts"
  },
  "dependencies": {
    "@platform/cli.prompt": "0.3.56",
    "@platform/exec": "0.3.11",
    "@platform/fs": "0.7.4",
    "@platform/log": "0.1.61",
    "@platform/types": "0.5.24",
    "@platform/util.value": "0.9.9",
    "@types/semver": "7.3.7",
    "inquirer": "8.1.2",
    "semver": "7.3.5"
  },
  "devDependencies": {
    "@platform/test": "0.2.9",
    "@platform/ts": "4.1.22",
    "@types/dotenv": "8.2.0",
    "@types/inquirer": "7.3.3",
    "dotenv": "10.0.0"
  },
  "files": [
    "lib",
    "!lib/test",
    "!*.TEST.{js, mjs, d.ts}",
    "!*.INTEGRATION.{js, mjs, d.ts}"
  ],
  "license": "MIT"
}
