    "build": "ts build",
    "prepare": "ts prepare",
    "pv": "ts-node -T scripts/prompt-version.ts"
  },
  "dependencies": {
    "@platform/cli.prompt": "0.2.10",
    "@platform/exec": "0.2.42",
    "@platform/fs": "0.5.3",
    "@platform/log": "0.1.3",
    "@platform/types": "0.4.1",
    "@platform/util.value": "0.7.0",
    "@types/semver": "6.2.0",
    "inquirer": "7.0.3",
    "semver": "7.1.1"
  },
  "devDependencies": {
    "@platform/test": "0.1.2",
    "@platform/ts": "3.7.9",
    "@types/dotenv": "8.2.0",
    "@types/inquirer": "6.5.0",
    "dotenv": "8.2.0"
  },
  "files": [
    "lib",
    "!lib/test",
    "!*.TEST.{js, mjs, d.ts}",
    "!*.INTEGRATION.{js, mjs, d.ts}"
