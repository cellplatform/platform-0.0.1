{
  "name": "@platform/ui.bootstrapper",
  "version": "0.0.1",
  "description": "Module loader for progressively loading UI modules dynamically.",
  "main": "lib/index",
  "types": "lib/index.d.ts",
  "scripts": {
    "ssr": "cd sample/server && yarn ssr $@",
    "ui": "cd sample/ui && yarn ui $@",
    "start": "cd sample/ui && yarn ui start web $@",
    "watch": "cd sample/server && yarn start",
    "test": "ts test",
    "tdd": "ts test --watch",
    "lint": "ts lint",
    "build": "ts build",
    "prepare": "ts prepare"
  },
  "dependencies": {
    "@platform/libs": "0.1.1",
    "@platform/react": "0.3.20"
  },
  "devDependencies": {
    "@platform/test": "0.0.61",
    "@platform/ts": "3.5.1"
  },
  "files": [
    "lib",
    "!lib/test",
    "!*.TEST.{js, mjs, d.ts}",
    "!*.INTEGRATION.{js, mjs, d.ts}"
  ],
  "license": "MIT",
  "private": true
}
