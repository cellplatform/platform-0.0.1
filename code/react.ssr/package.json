{
  "name": "@platform/react.ssr",
  "version": "1.1.12",
  "description": "A lightweight SSR (server-side-rendering) system for react apps bundled with ParcelJS and hosted on S3.",
  "main": "lib/index",
  "types": "lib/index.d.ts",
  "bin": {
    "ssr": "lib/bin.js"
  },
  "scripts": {
    "ssr": "cd src.sample/server && yarn ssr $@",
    "watch": "cd src.sample/server && yarn watch $@",
    "test": "ts test",
    "tdd": "ts test --watch",
    "lint": "ts lint",
    "build": "ts build",
    "build-test": "ts build",
    "prepare": "ts prepare",
    "deploy": "cd sample/server && yarn deploy"
  },
  "dependencies": {
    "@platform/cli": "0.4.2",
    "@platform/exec": "0.2.31",
    "@platform/fs": "0.3.3",
    "@platform/fs.s3": "0.3.7",
    "@platform/http": "0.4.11",
    "@platform/libs": "0.1.3",
    "@platform/log": "0.0.145",
    "@platform/micro": "0.6.0",
    "@platform/npm": "0.2.15",
    "@platform/react": "0.3.26",
    "bowser": "2.5.4",
    "cheerio": "1.0.0-rc.3",
    "listr": "0.14.3",
    "path-to-regexp": "3.1.0",
    "semver": "6.3.0"
  },
  "devDependencies": {
    "@platform/test": "0.0.64",
    "@platform/ts": "3.5.6",
    "@types/bowser": "1.1.1",
    "@types/cheerio": "0.22.13",
    "@types/semver": "6.0.1"
  },
  "files": [
    "lib",
    "!lib/test",
    "!*.TEST.{js, mjs, d.ts}",
    "tmpl"
  ],
  "license": "MIT"
}
