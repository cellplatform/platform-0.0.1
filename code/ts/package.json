{
  "name": "@platform/ts",
  "version": "3.4.0",
  "description": "TypesScript build, prepare and publish toolchain.",
  "main": "lib/index",
  "types": "lib/index.d.ts",
  "bin": {
    "ts": "bin.js"
  },
  "scripts": {
    "ts": "node bin $@",
    "copy-config": "sh sh/copy-config.sh",
    "test": "node bin test",
    "tdd": "node bin test --watch",
    "ti": "node bin test --suffix INTEGRATION",
    "lint": "node bin lint",
    "build": "sh sh/build.sh $@",
    "prepare": "yarn clean && yarn copy-config && yarn build && yarn lint && yarn test",
    "tmp": "node bin $@",
    "example": "node lib/example/bin",
    "e": "yarn example $@",
    "example-pub": "node bin publish --outDir tmp/dist",
    "clean": "sh sh/clean.sh",
    "examples": "node lib/example/examples"
  },
  "dependencies": {
    "@platform/cli": "0.0.70",
    "@platform/fs": "0.0.44",
    "@platform/libs": "0.0.11",
    "@platform/ts.libs": "3.4.0",
    "@platform/exec": "0.0.7"
  },
  "devDependencies": {
    "@platform/test": "0.0.37"
  },
  "files": [
    "lib",
    "bin.js",
    "tsconfig.json",
    "tslint.json"
  ],
  "repository": "uiharness/platform",
  "license": "MIT"
}
