{
  "name": "sys.webpack",
  "version": "0.0.1",
  "description": "Webpack compiler for modules.",
  "main": "lib/index",
  "types": "lib/index.d.ts",
  "scripts": {
    "__bundle": "webpack --mode production",
    "__bundle:dev": "webpack --mode development",
    "__start": "webpack-dev-server --open=false --mode development",
    "__start:live": "webpack-dev-server --open=false --mode development --liveReload",
    "start": "yarn dev",
    "test": "ts-node -T ../../scripts/test",
    "lint": "ts lint",
    "build": "tsc $@",
    "clean": "rm -rf dist",
    "serve": "cd dist && serve --listen 3000",
    "bundle": "yarn clean && ts-node -T src/test/script.bundle",
    "watch": "ts-node -T src/test/script.watch",
    "dev": "ts-node -T src/test/script.dev"
  },
  "dependencies": {
    "@platform/cell.module": "0.0.22",
    "@platform/cell.types": "0.4.158",
    "@platform/libs": "0.2.2",
    "@platform/log": "^0.1.29",
    "@platform/polyfill": "^0.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-react": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@platform/test": "0.1.15",
    "@types/express": "^4.17.8",
    "@types/react": "16.9.51",
    "@types/react-dom": "16.9.8",
    "@types/webpack-dev-server": "^3.11.0",
    "babel-loader": "8.1.0",
    "css-loader": "4.3.0",
    "eslint-webpack-plugin": "^2.1.0",
    "html-webpack-plugin": "4.5.0",
    "style-loader": "1.3.0",
    "webpack": "5.0.0-rc.3",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0"
  },
  "files": [
    "lib",
    "!lib/test",
    "!*.TEST.{js, mjs, d.ts}"
  ],
  "license": "MIT",
  "private": true
}
