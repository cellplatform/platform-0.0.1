{
  "name": "@platform/ui.shell",
  "version": "0.0.2",
  "description": "Modular application shell structure with tree navigation.",
  "main": "lib/index",
  "types": "lib/index.d.ts",
  "scripts": {
    "ssr": "cd sample.server && yarn ssr $@",
    "ui": "ui $@",
    "start": "ui start web $@",
    "watch": "cd sample.server && yarn watch $@",
    "test": "ts test",
    "tdd": "ts test --watch",
    "lint": "ts lint",
    "build": "ts build --no-esm $@",
    "build-test": "ts build --tsconfig=tsconfig.test $@",
    "prepare": "ts prepare",
    "bundle": "ui bundle web",
    "deploy": "cd sample.server && yarn deploy"
  },
  "dependencies": {
    "@platform/react": "0.3.20",
    "@platform/ui.loader": "0.1.3",
    "@platform/ui.tree": "0.2.20",
    "@platform/util.value": "0.4.11"
  },
  "devDependencies": {
    "@platform/test": "0.0.61",
    "@platform/ts": "3.5.1",
    "@uiharness/dev": "0.9.3",
    "@uiharness/ui": "0.6.14"
  },
  "files": [
    "lib",
    "!lib/sample",
    "!*.TEST.{js, mjs, d.ts}"
  ],
  "license": "MIT",
  "private": true
}
